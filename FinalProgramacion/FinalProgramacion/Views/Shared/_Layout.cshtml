


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nombre de la aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Modulo Mantenimiento
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" @Html.ActionLink("Agregar Empleado", "Create", "Empleados")</a>
                            <a class="dropdown-item" @Html.ActionLink("Agregar Cargo", "Create", "Cargos")</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" @Html.ActionLink("Agregar Departamento", "Create", "Departamentos")</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Modulo Procesos
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" @Html.ActionLink("Calcular Nomina", "Create", "Nominas")</a>
                            <a class="dropdown-item" @Html.ActionLink("Inactivar Empleado", "Create", "Salidas")</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" @Html.ActionLink("Registrar Vacaciones", "Create", "Vacaciones")</a>
                            <a class="dropdown-item" @Html.ActionLink("Registrar Permiso", "Create", "Permisos")</a>
                            <a class="dropdown-item" @Html.ActionLink("Registrar Licencias", "Create", "Licencias")</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Modulo Informes
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" @Html.ActionLink("ver Nominas", "Index", "Nominas")</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" @Html.ActionLink("Ver empleados activos", "Index", "Salidas")</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" @Html.ActionLink("Ver empleados inactivos", "Index", "Salidas")</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" @Html.ActionLink("Ver Departamentos", "Index", "Departamentos")</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" @Html.ActionLink("Salida por mes", "Index", "Salidas")</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" @Html.ActionLink("Permisos", "Index", "Permisos")</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>